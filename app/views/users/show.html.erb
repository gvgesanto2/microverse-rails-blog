<section class="p-user-profile">
  <header class="c-profile-header">
    <div class="c-profile-header__top">
    
    </div>
    <div class="c-profile-header__center">
      <img src=<%= image_url('blank_avatar.jpg') %> class="c-round-img--lg c-profile-header__img" alt="user profile photo" />
      <div class="c-profile-header__info">
        <h1 class="c-profile-header__name"><%= @user.name %></h1>
        <p class="c-profile-header__posts"><%= @user.posts_counter %> posts</p>
      </div>
    </div>

    <div class="c-profile-header__bottom">
      <ul class="c-user-tab">
        <li>
          <button type="button" class="c-user-tab__btn">
            Posts
          </button>
        </li>
        <li>
          <button type="button" class="c-user-tab__btn">
            Bio
          </button>
        </li>
      </ul>
    </div>
  </header>

  <div class="p-user-profile__content">
    <div class="c-user-bio c-card">
      <h2 class="c-user-bio__title">Biography</h2>
      <p class="c-user-bio__text">
        <%= @user.bio %>
      </p>
    </div>

    <% if @user.get_most_recent_posts.length.zero? %>
      <div class="c-card">
        <p>No posts created.</p>
      </div>
    <% else %>
      <div class="c-posts-preview c-card">
        <h2 class="c-posts-preview__title">
          Posts Preview
        </h2>
        <ul class="c-posts-preview__list">
          <% @user.get_most_recent_posts(3).each do |post| %>
            <li>
              <%= link_to user_post_path(@user, post), class: "c-posts-preview-item" do %>
                <h3 class="c-posts-preview-item__title">
                  <%= post.title %>
                </h3>
                <p class="c-posts-preview-item__text">
                  <%=post.text[0..100] %>...
                </p>
                <div class="c-posts-preview-item__info">
                  <span class="c-posts-preview-item__likes">
                    <%= post.likes_counter %> likes
                  </span>
                  <span class="c-posts-preview-item__likes">
                    <%= post.comments_counter %> comments
                  </span>
                </div>
              <% end %>
            </li>
          <% end %>
        </ul>

        <%= link_to "See All Posts", user_posts_path(@user), class: "c-posts-preview__btn c-btn", role: "button" %> 
      </div>
    <% end %>
  </div>

</section>